---
import { Icon } from "astro-icon/components";

const { title, icon, id } = Astro.props;
---

<section id={id} class="scroll-m-20">
  <div  class="title relative flex items-center gap-1 mb-10">
    {icon && <Icon id="icon" name={icon} class="text-secondary" size={28} />}
    <h2 class="text-2xl md:text-3xl">{title}</h2>
  </div>
  <slot />
</sectio>

<style>
  .title::after {
    content: "";
    position: absolute;
    bottom: -1.2rem;
    left: 0;
    width: 6rem;
    height: 4px;
    background-color: var(--color-primary);
    border-radius: 3px;
  }
</style>

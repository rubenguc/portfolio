---
import { House, Github, Linkedin, FileUser, Icon } from "@lucide/astro";
import { INFO } from "../../info";

const getIcon = (platform: string) => {
    switch (platform) {
        case "github":
            return Github;
        case "linkedin":
            return Linkedin;
        case "cv":
            return FileUser;
        default:
            return null;
    }
};
---

<header
    class="sticky top-0 z-10 w-full py-4 px-2"
>
    <div class="backdrop-blur-sm mx-auto bg-white/65 flex items-center justify-between w-fit border rounded-xl border-zinc-200 p-3">
        <a href="/" class="hover:opacity-70 hover:scale-105 transition-transform">
            <House size={23} stroke-width={1.8} />
        </a>
        <div class="w-px h-5 bg-zinc-200 mx-6"></div>
        <div class="flex items-center justify-center space-x-8">
            {
                INFO.contactInfo.map((social) => (
                    <a href={social.link} target="_blank" class="hover:opacity-60 hover:scale-110 transition-transform">
                        <span class="sr-only transform transition-colors hover:text-slate-200">
                            {social.label}
                        </span>

                        {<getIcon(social.platform) size={23} stroke-width={1.8}></getIcon>}
                    </a>
                ))
            }
        </div>

    </div>
</header>
